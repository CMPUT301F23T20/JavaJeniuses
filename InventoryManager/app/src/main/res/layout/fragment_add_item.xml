<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/addItemScrollView"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:fitsSystemWindows="true"
    tools:context=".ui.addItem.addItemFragment">

    <!-- Main fields -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Name of item -->
        <TextView
            android:layout_marginTop="10dp"
            android:id="@+id/addItemNameTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-black"
            android:text="@string/item_name"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/itemNameInput"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/item_name_hint"
            android:imeOptions="actionNext"
            android:inputType="text" />


        <!-- Date of purchase/acquisition -->
        <TextView
            android:id="@+id/addPurchaseDateTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:fontFamily="sans-serif-black"
            android:text="@string/purchase_date_label"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/purchaseDateInput"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/purchase_date_hint"
            android:imeOptions="actionNext"
            android:focusable="false"/>


        <!-- Brief description -->
        <TextView
            android:id="@+id/addDescriptionTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:fontFamily="sans-serif-black"
            android:text="@string/description"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/descriptionInput"
                android:layout_width="300dp"
                android:layout_height="50dp"
                android:hint="@string/description_hint"
                android:imeOptions="actionNext"
                android:inputType="text" />

            <Button
                android:id="@+id/scanDescriptionButton"
                android:layout_width="90dp"
                android:layout_height="50dp"
                android:layout_marginLeft="10dp"
                android:layout_gravity="bottom|center"
                android:textSize="15sp"
                android:gravity="center"
                android:text="Scan"/>
        </LinearLayout>


        <!-- Make -->
        <TextView
            android:id="@+id/addMakeTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:fontFamily="sans-serif-black"
            android:text="@string/make_label"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/makeInput"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/make_hint"
            android:imeOptions="actionNext"
            android:inputType="text" />


        <!-- Model -->
        <TextView
            android:id="@+id/addModelTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:fontFamily="sans-serif-black"
            android:text="@string/model_label"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/modelInput"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/model_hint"
            android:inputType="text"
            android:imeOptions="actionNext"
            android:textColor="@color/black" />


        <!-- Serial Number -->
        <TextView
            android:id="@+id/addSerialNumberTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:fontFamily="sans-serif-black"
            android:text="@string/serial_number"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/serialNumberInput"
                android:layout_width="300dp"
                android:layout_height="50dp"
                android:hint="@string/serial_number_hint"
                android:inputType="text"
                android:imeOptions="actionNext"
                android:textColor="@color/black" />

            <Button
                android:id="@+id/scanSerialNumberButton"
                android:layout_width="90dp"
                android:layout_height="50dp"
                android:layout_marginLeft="10dp"
                android:layout_gravity="bottom|center"
                android:textSize="15sp"
                android:gravity="center"
                android:text="Scan"/>
        </LinearLayout>


        <!-- Estimated Value -->
        <TextView
            android:id="@+id/addEstimatedValueTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:fontFamily="sans-serif-black"
            android:text="@string/estimate_value"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/estimatedValueInput"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/estimate_value_hint"
            android:inputType="numberDecimal"
            android:imeOptions="actionNext" />


        <!-- Comment -->
        <TextView
            android:id="@+id/addCommentTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:fontFamily="sans-serif-black"
            android:text="@string/comment_label"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/commentInput"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="50dp"
            android:hint="@string/comment_hint"
            android:imeOptions="actionDone"
            android:inputType="text"
            />


        <!-- Image info -->
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/image_constraint_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="50dp"
            app:layout_constraintTop_toBottomOf="@id/commentInput" >

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/image0Constraint"
                android:layout_width="115dp"
                android:layout_height="151dp"
                android:background="#A5A5A5"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintHorizontal_bias="0.145"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toStartOf="@id/image1Constraint">

                <Button
                    android:id="@+id/deleteImage0Button"
                    android:layout_width="30dp"
                    android:layout_height="29dp"
                    android:background="@drawable/baseline_cancel_24"
                    android:elevation="8dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="1.0"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintVertical_bias="0.0" />

                <ImageView
                    android:id="@+id/itemImage0"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="#A5A5A5"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.0"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintVertical_bias="0.0" />

                <Button
                    android:id="@+id/addImage0Button"
                    android:layout_width="48dp"
                    android:layout_height="47dp"
                    android:background="@drawable/baseline_add_photo_alternate_24"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/image1Constraint"
                android:layout_width="115dp"
                android:layout_height="151dp"
                android:background="#A5A5A5"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintHorizontal_bias="0.145"
                app:layout_constraintStart_toEndOf="@id/image0Constraint"
                app:layout_constraintEnd_toStartOf="@id/image2Constraint">

                <Button
                    android:id="@+id/deleteImage1Button"
                    android:layout_width="30dp"
                    android:layout_height="29dp"
                    android:background="@drawable/baseline_cancel_24"
                    android:elevation="8dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="1.0"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintVertical_bias="0.0" />

                <ImageView
                    android:id="@+id/itemImage1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="#A5A5A5"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <Button
                    android:id="@+id/addImage1Button"
                    android:layout_width="48dp"
                    android:layout_height="47dp"
                    android:background="@drawable/baseline_add_photo_alternate_24"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/image2Constraint"
                android:layout_width="115dp"
                android:layout_height="151dp"
                android:background="#A5A5A5"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintHorizontal_bias="0.145"
                app:layout_constraintStart_toEndOf="@id/image1Constraint"
                app:layout_constraintEnd_toEndOf="parent">

                <Button
                    android:id="@+id/deleteImage2Button"
                    android:layout_width="30dp"
                    android:layout_height="29dp"
                    android:background="@drawable/baseline_cancel_24"
                    android:elevation="8dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="1.0"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintVertical_bias="0.0" />

                <ImageView
                    android:id="@+id/itemImage2"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="#A5A5A5"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <Button
                    android:id="@+id/addImage2Button"
                    android:layout_width="48dp"
                    android:layout_height="47dp"
                    android:background="@drawable/baseline_add_photo_alternate_24"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />
            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.constraintlayout.widget.ConstraintLayout>

        <!-- Add item button -->
        <Button
            android:id="@+id/addItemButton"
            android:layout_width="281dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginBottom="100dp"
            android:gravity="center"
            android:text="@string/add_item" />
    </LinearLayout>
</ScrollView>